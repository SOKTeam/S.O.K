{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "video",
        "music",
        "books",
        "games",
        "images",
        "ui",
        "core",
        "apis",
        "config",
        "file-ops",
        "deps"
      ]
    ]
  }
}
